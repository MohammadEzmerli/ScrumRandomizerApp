<Microsoft.MobileBlazorBindings.Elements.ContentView>

    <Microsoft.MobileBlazorBindings.Elements.StackLayout Margin="new Thickness(20)">
        <Microsoft.MobileBlazorBindings.Elements.Button Text="MainMenu" OnClick="@CleanMainStackLayout" @ref="btn" />


        <Microsoft.MobileBlazorBindings.Elements.StackLayout Margin="new Thickness(20)" @ref="mainStackLayout">

            @if (ShowScrumParticipantsComponent)
            {
                <@ScrumParticipantsComponent />
            }
            else if(ShowAddScrumParticipantComponent)
            {
                @*<AddScrumParticipantComponent />*@
            }
            else
            {
                <Microsoft.MobileBlazorBindings.Elements.Button Text="Start Scrum Randomizer" OnClick="@OpenScrumRandomizerComponent" />
                <Microsoft.MobileBlazorBindings.Elements.Button Text="Add New Scrum Participant" OnClick="@OpenAddScrumParticipantComponent" />
            }


        </Microsoft.MobileBlazorBindings.Elements.StackLayout>
    </Microsoft.MobileBlazorBindings.Elements.StackLayout>
</Microsoft.MobileBlazorBindings.Elements.ContentView>

@code {
    private Microsoft.MobileBlazorBindings.Elements.StackLayout mainStackLayout { get; set; }
    private Microsoft.MobileBlazorBindings.Elements.Button btn { get; set; }
    private bool ShowScrumParticipantsComponent { get; set; } = false;
    private bool ShowAddScrumParticipantComponent { get; set; } = false;

    private void OpenScrumRandomizerComponent()
    {
        mainStackLayout.NativeControl.Children.Clear();
        if (false == ShowScrumParticipantsComponent)
            ShowScrumParticipantsComponent = true;
    }

    private void CleanMainStackLayout()
    {
        if (ShowScrumParticipantsComponent || ShowAddScrumParticipantComponent)
        {
            mainStackLayout.NativeControl.Children.Clear();
            ShowScrumParticipantsComponent = false;
            ShowAddScrumParticipantComponent = false;
        }
    }

    private void OpenAddScrumParticipantComponent()
    {
        if (false == ShowAddScrumParticipantComponent)
            ShowAddScrumParticipantComponent = true;
    }
}